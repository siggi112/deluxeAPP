<%- include ../../temp/header.ejs %>
<%- include ../../temp/nav.ejs %>
<div class="page-content d-flex align-items-stretch">
<%- include ../../temp/sidebar.ejs %>
<div class="content-inner active" style="padding-bottom: 59px;">
          <!-- Page Header-->
          <header class="page-header">
            <div class="container-fluid">
              <h2 class="no-margin-bottom">Suppliers</h2>
            </div>
          </header>
          <!-- Breadcrumb-->
          <div class="breadcrumb-holder container-fluid">
            <ul class="breadcrumb">
              <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
              <li class="breadcrumb-item active">Suppliers</li>
            </ul>
          </div>
          <section class="tables">
            <div class="container-fluid">
              <div class="row">
                <div class="col-lg-12">
                  <div class="card">
                    <div class="card-header">
                      <div class="row">
                        <div class="col-md-8">
                          <!-- <div class="search-form">
                                    <form class="" id="searchForm" action="/leads" method="get">
                                    <div class="input-group">
                                    <input type="text" name="search" autocomplete="off" id="searchNow" placeholder="Search for lead..." class="form-control">
                                    </div>
                                    </form>
                          </div> -->
                        </div>
                            <div class="col-md-4">
                              <div class="float-right">
                                <form class="incline" action="/suppliers/new" method="get">
                                    <button class="btn btn-success btn-sm new-lead-t" type="submit"><span class="fa fa-plus"></span> New Supplier</button>
                                </form>
                              </div>
                          </div>
                      </div>
                    </div>
                    <div class="card-body">
                      <div class="table-responsive">
                        <table class="table table-striped table-hover">
                          <thead>
                            <tr>
                              <th>Name</th>
                              <th>Company</th>
                              <th>ID</th>
                              <th>Type</th>
                            </tr>
                          </thead>
                          <tbody id="leadsResults">



<% suppliers.forEach(function(supplier) { %>

  <tr>
    <th scope="row"><a href="/suppliers/<%= supplier.id %>"><%= supplier.name %></a></th>
    <td><%= supplier.company %></td>
    <td><%= supplier.companyid %></td>
    <td><%= supplier.type %></td>

</tr>
      <% }); %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>



