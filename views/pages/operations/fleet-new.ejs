<%- include ../../temp/header.ejs %>
<%- include ../../temp/nav.ejs %>
<div class="page-content d-flex align-items-stretch">
<%- include ../../temp/sidebar.ejs %>
<div class="content-inner active" style="padding-bottom: 59px;">
          <!-- Page Header-->
          <header class="page-header">
                      <div class="container-fluid">
                        <h2 class="no-margin-bottom">Add to fleet</h2>
                      </div>
          </header>

          <div class="breadcrumb-holder container-fluid">
            <ul class="breadcrumb">
              <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Add to fleet </li>
            </ul>
          </div>



          <section class="forms">
              <div class="container-fluid">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="card">
                    <div class="card-header d-flex align-items-center">
                      <h3 class="h4">Add to fleet</h3>
                    </div>
                    <div class="card-body">
                      <form class="form-inline" method="post" action="/operations/fleet/new">
                        <div class="form-group">
                          <label for="inlineFormInput" class="sr-only">Make</label>
                          <input id="inlineFormInput" type="text" name="make" placeholder="Make" class="mr-3 form-control">
                        </div>
                        <div class="form-group">
                          <label for="inlineFormInput" class="sr-only">Model</label>
                          <input id="inlineFormInput" type="text" name="model" placeholder="Model" class="mr-3 form-control">
                        </div>
                        <div class="form-group">
                          <label for="inlineFormInput" class="sr-only">Passengers</label>
                          <input id="inlineFormInput" type="text" name="passengers" placeholder="Passengers" class="mr-3 form-control">
                        </div>
                        <div class="form-group">
                          <label for="inlineFormInput" class="sr-only">Registration Number</label>
                            <input id="inlineFormInput" type="text" name="number" placeholder="Registration Number" class="mr-3 form-control">
                        </div>
                        <div class="form-group">
                          <label for="inlineFormInputGroup" class="sr-only">Registration Year</label>
                          <input id="inlineFormInput" type="text" name="year" placeholder="Registration Year" class="mr-3 form-control">
                        </div>
                        <div class="form-group">
                          <label for="inlineFormInputGroup" class="sr-only">Drive</label>
                          <select id="inlineFormInputGroup" name="drive" class="mr-3 form-control">
                              <option value="4WD">4WD</option>
                              <option value="RWD">RWD</option>
                              <option value="FWD">FWD</option>
                            </select>
                        </div>
                        <div class="form-group">
                          <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                      </form>
                    </div>
                  </div>

                </div>



              </div>
              </section>




<%- include ../../temp/footer.ejs %>
