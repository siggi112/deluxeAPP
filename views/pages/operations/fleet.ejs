<%- include ../../temp/header.ejs %>
<%- include ../../temp/nav.ejs %>
<div class="page-content d-flex align-items-stretch">
<%- include ../../temp/sidebar.ejs %>
<div class="content-inner active" style="padding-bottom: 59px;">
          <!-- Page Header-->
          <header class="page-header">
            <div class="container-fluid">
              <h2 class="no-margin-bottom">Fleet</h2>
            </div>
          </header>
          <!-- Breadcrumb-->
          <div class="breadcrumb-holder container-fluid">
            <div class="row">
                    <div class="col-md-6 col-xs-12">
                      <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">Fleet</li>
                      </ul>
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <div class="float-right-actions">
                      <button class="btn btn-success btn-sm new-lead-t" type="submit" data-toggle="modal" data-target="#newDriver"><span class="fa fa-plus"></span> Add to fleet</button>

                    </div>
                              </div>

            </div>
          </div>
          <section class="tables">
            <div class="container-fluid">
              <div class="row">
                <div class="col-lg-12">
                  <div class="card">
                    <div class="card-header">
                      <div class="row">
                        <div class="col-md-8">
                        </div>

                      </div>
                    </div>
                    <div class="card-body">
                      <div class="table-responsive">
                        <table class="table table-striped table-hover">
                          <thead>
                            <tr>
                              <th>Make</th>
                              <th>Model</th>
                              <th>Passengers</th>
                              <th>Registration Number</th>
                              <th>Registration Year</th>
                              <th>Drive</th>
                            </tr>
                          </thead>
                          <tbody id="leadsResults">



<% cars.forEach(function(car) { %>

  <tr>
    <th scope="row"><a href="/operations/fleet/<%= car._id %>"><%= car.make %></a></th>
    <td><%= car.model %></td>
    <td><%= car.passengers %></td>
    <td><%= car.number %></td>
    <td><%= car.year %></td>
    <td><%= car.drive %></td>
</tr>
      <% }); %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>


                    <!-- Modal -->
          <div class="modal fade" id="newDriver" tabindex="-1" role="dialog" aria-labelledby="newDriver" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Add car to fleet</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form action="/operations/fleet/new" method="post" encType="multipart/form-data">
                      <div class="form-group">
                        <label for="inlineFormInput" class="sr-only">Make</label>
                        <input id="inlineFormInput" type="text" name="make" placeholder="Make" class="mr-3 form-control">
                      </div>
                      <div class="form-group">
                        <label for="inlineFormInput" class="sr-only">Model</label>
                        <input id="inlineFormInput" type="text" name="model" placeholder="Model" class="mr-3 form-control">
                      </div>
                      <div class="form-group">
                        <label for="inlineFormInput" class="sr-only">Passengers</label>
                        <input id="inlineFormInput" type="text" name="passengers" placeholder="Passengers" class="mr-3 form-control">
                      </div>
                      <div class="form-group">
                        <label for="inlineFormInput" class="sr-only">Registration Number</label>
                          <input id="inlineFormInput" type="text" name="number" placeholder="Registration Number" class="mr-3 form-control">
                      </div>
                      <div class="form-group">
                        <label for="inlineFormInputGroup" class="sr-only">Registration Year</label>
                        <input id="inlineFormInput" type="text" name="year" placeholder="Registration Year" class="mr-3 form-control">
                      </div>
                      <div class="form-group">
                        <label for="inlineFormInputGroup" class="sr-only">Drive</label>
                        <select id="inlineFormInputGroup" name="drive" class="mr-3 form-control">
                            <option value="4WD">4WD</option>
                            <option value="RWD">RWD</option>
                            <option value="FWD">FWD</option>
                          </select>
                      </div>
                      <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                      </div>
                </form>
                </div>
              </div>
            </div>
          </div>



<%- include ../../temp/footer.ejs %>
