<%- include ../../temp/header.ejs %>
<%- include ../../temp/nav.ejs %>
<div class="page-content d-flex align-items-stretch">
<%- include ../../temp/sidebar.ejs %>
<div class="content-inner active" style="padding-bottom: 59px;">
          <!-- Page Header-->
          <header class="page-header">
            <div class="container-fluid">
              <h2 class="no-margin-bottom">Bookings</h2>
            </div>
          </header>
          <!-- Breadcrumb-->
          <div class="breadcrumb-holder container-fluid">
            <div class="row">
              <div class="col-md-6 col-xs-12">
                <ul class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                  <li class="breadcrumb-item active">Bookings            </li>
                </ul>
              </div>
                <div class="col-md-6 col-xs-12">

                  <div class="float-right-actions">
                    <div class="dropdown">
                        <%if (accessControl  === "Admin") {%>
                      <form class="incline" action="/bookings/new" method="get">
                          <button class="btn btn-success btn-sm new-lead-t" type="submit"><span class="fa fa-plus"></span> New Booking</button>
                      </form>
                          <%}%>

        </div>
                  </div>

                </div>
            </div>


          </div>
          <section class="tables">
            <div class="container-fluid">
              <div class="row">
                <div class="col-lg-12">
                  <div class="card">
                    <div class="card-header">
                      <div class="row">
                        <div class="col-md-8">
                          <div class="search-form">
                                    <form action="/bookings" method="get">
                                    <div class="input-group">
                                        <!-- <div class="col-md-8">
                                        <input type="text" name="firstname" autocomplete="off" value="<%= firstName %>" placeholder="First Name" class="form-control">
                                        </div> -->
                                          <div class="col-md-4">
                                            <select class="form-control custom-select" name="status">
                                              <option selected value="">All Statuses</option>
                                              <option value="Pending">Pending</option>
                                              <option value="Confirmed">Confirmed</option>
                                              <option value="Completed">Completed</option>
                                              <option value="Cancelled">Cancelled</option>
                                            </select>
                                          </div>
                                    </div>
                          </div>
                        </div>
                            <div class="col-md-4">
                              <div class="float-right">
                                    <button class="btn btn-primary btn-sm new-lead-t" type="submit">Search Now</button>
                                </form>
                              </div>
                          </div>
                      </div>
                    </div>
                    <div class="card-body">
                      <div class="table-responsive">
                        <table class="table table-striped table-hover">
                          <thead>
                            <tr>
                              <th>Name</th>
                              <th>Email</th>
                              <th>Status</th>
                                <th>Booking Number</th>
                            </tr>
                          </thead>
                          <tbody id="leadsResults">



<% bookings.forEach(function(booking) { %>

  <tr>
    <th scope="row"><a href="/bookings/<%= booking.id %>"><%= booking.firstname %> <%= booking.lastname %></a></th>
    <td><%= booking.email %></td>
    <td><%= booking.status %></td>
      <td><%= booking.bookingnumber %></td>
</tr>
      <% }); %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>



<%- include ../../temp/footer.ejs %>
